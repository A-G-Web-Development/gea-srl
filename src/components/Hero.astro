---
import heroBg from "../assets/images/hero-bg.jpg";
import logoSinFondo from "../assets/images/logo-sin-fondo.svg";
---

<section
  id="inicio"
  class="s-home page-hero target-section"
  data-parallax="scroll"
  data-image-src={heroBg.src}
  data-natural-width="3000"
  data-natural-height="2000"
  data-position-y="center"
>
  <div class="grid-overlay">
    <div></div>
  </div>

  <div class="home-content">
    <div class="row home-content__main">
      <div style="max-width: 600px; margin: auto">
        <img src={logoSinFondo.src} alt="Homepage" />
      </div>

      <h3>Empresa dedicada al Mantenimiento Integral</h3>

      <div class="home-content__button">
        <a
          href="#quienes-somos"
          class="smoothscroll btn btn--primary btn--large"
        >
          Más Sobre Nosotros
        </a>
        <a href="#contacto" class="smoothscroll btn btn--large">
          Contáctenos
        </a>
      </div>
    </div>
  </div>

  <ul class="home-social">
